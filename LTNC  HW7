Bai 1
#include <bits/stdc++.h>

using namespace std;

int binarysearch(int a[], int l, int r, int x)
{
    if (l > r ){
       return - 1;
    }

    int m = (l + r) / 2;

    if(a[m] == x) {
        return m;
    }
    if(a[m] > x) {
        return(a, l, m - 1, x);
    }

    return binarysearch(a, m + 1, r, x);

}

int main()
{
    int a[] = {1, 2 ,3 , 4, 5, 6};

    int x;
    cin >> x;

    cout << binarysearch(a, 0, 5, x);
}

